{
	"author": "Paul Williams",
	"name": "p17",
	"description": "Svelte library experimenting with form behaviour and user interaction (layout and style uses UK GDS as a guide)",
	"type": "module",
	"license": "MIT",
	"version": "0.4.0",
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/PaulioRandall/p17.git"
	},
	"keywords": [
		"svelte",
		"forms",
		"plunder"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"fmt": "prettier --plugin prettier-plugin-svelte --log-level warn --write .",
		"build": "vite build",
		"package": "svelte-package -t false",
		"dev": "npm run fmt && vite dev --port 3000",
		"commit": "npm run fmt && npm run build && npm run package && cat ./scripts/ready-to-ship.txt"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "3.2.0",
		"@sveltejs/kit": "2.5.6",
		"@sveltejs/package": "2.3.1",
		"prettier": "3.2.5",
		"prettier-plugin-svelte": "3.2.3",
		"vite": "5.2.9"
	},
	"peerDependencies": {
		"svelte": "4.x"
	}
}
